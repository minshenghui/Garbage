<cu-custom bgColor="bg-gradual-green">
  <view slot="content">长沙垃圾分类手册</view>
</cu-custom>

<view class="box bg-darkGray" wx:if="{{ show_tip }}">
  <view class='arrow'></view>
  <view class='body' bindtap='showModal'>
    <text>点击「添加到我的小程序」</text>
  </view>
</view>

